# Configuration Eloquence - Variables d'Environnement
# IMPORTANT: Remplacez les clés de démonstration par vos vraies clés API

# ======================================
# CONFIGURATION LIVEKIT ET IA
# ======================================

# LiveKit Configuration pour streaming audio temps réel
LIVEKIT_API_KEY=demo_cosmic_voice_key_2025
LIVEKIT_API_SECRET=demo_cosmic_voice_secret_2025
LIVEKIT_URL=ws://localhost:7880

# Mistral AI Configuration pour feedbacks conversationnels
MISTRAL_API_KEY=demo_mistral_cosmic_voice_key
SCALEWAY_MISTRAL_URL=https://api.scaleway.ai/mistral
MISTRAL_MODEL=mistral-nemo-instruct-2407

# OpenAI Configuration (REMPLACEZ PAR VOTRE VRAIE CLÉ)
# Obtenez votre clé sur: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-proj-VOTRE_VRAIE_CLE_OPENAI_ICI

# ======================================
# CONFIGURATION SERVICES ELOQUENCE
# ======================================

# Redis Configuration
REDIS_URL=redis://localhost:6379

# PostgreSQL Configuration
POSTGRES_DB=eloquence_db
POSTGRES_USER=eloquence_user
POSTGRES_PASSWORD=eloquence_password_2025

# Services URLs
ELOQUENCE_STREAMING_API_URL=http://localhost:8002
VOSK_STT_URL=http://localhost:8002
MISTRAL_CONVERSATION_URL=http://localhost:8001

# ======================================
# SÉCURITÉ ET DÉVELOPPEMENT
# ======================================

# JWT Configuration
JWT_SECRET=eloquence_jwt_secret_2025_cosmic_voice
JWT_EXPIRATION=24h

# Environnement
NODE_ENV=development
FLASK_ENV=development
FLUTTER_ENV=development

# Debug et Logging
DEBUG=true
LOG_LEVEL=info
COSMIC_VOICE_DEBUG=true

# ======================================
# CONFIGURATION RÉSEAU
# ======================================

# Timeouts (en secondes)
CONNECTION_TIMEOUT=15
WEBSOCKET_TIMEOUT=30
API_REQUEST_TIMEOUT=10

# Retry Configuration
MAX_RETRIES=5
RETRY_DELAY=2

# ======================================
# FONCTIONNALITÉS COSMIC VOICE
# ======================================

# Paramètres de l'exercice
COSMIC_VOICE_MAX_DURATION=600
COSMIC_VOICE_MIN_PITCH=60
COSMIC_VOICE_MAX_PITCH=400
COSMIC_VOICE_ENABLE_OFFLINE_MODE=true

# Paramètres de performance
PITCH_STABILITY_THRESHOLD=0.6
FLOW_STATE_THRESHOLD=0.8
CRYSTAL_SPAWN_RATE=0.7

# ======================================
# MONITORING ET ALERTES
# ======================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
ALERT_WEBHOOK_URL=
MONITORING_ENABLED=true

# Métriques
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics
