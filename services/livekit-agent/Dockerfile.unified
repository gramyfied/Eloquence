# Dockerfile unifié pour router tous les exercices LiveKit
FROM python:3.11-slim

WORKDIR /app

# Variables d'environnement pour optimisation
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONIOENCODING=utf-8 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Installer les dépendances système
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    make \
    ffmpeg \
    libsndfile1 \
    portaudio19-dev \
    && rm -rf /var/lib/apt/lists/*

# Copier et installer les dépendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copier le code de l'application
COPY . .

# Créer un utilisateur non-root pour la sécurité
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Commande par défaut avec le point d'entrée unifié qui route vers le bon système
# Utilise la commande "start" pour démarrer en mode production
CMD ["python", "unified_entrypoint.py", "start"]